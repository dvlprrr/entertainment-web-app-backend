generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @unique @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id            Int              @id @unique @default(autoincrement())
  email         String           @unique @db.VarChar(255)
  password      String
  avatar        String           @default("https://i.pngimg.me/thumb/f/720/c3f2c592f9.jpg")
  roleId        Int              @default(1)
  role          Role             @relation(fields: [roleId], references: [id])
  FavoriteMovie FavouriteMovie[]
}

model FilmType {
  id    Int     @id @unique @default(autoincrement())
  type  String  @unique
  movie Movie[]
}

model Movie {
  id            Int              @id @default(autoincrement())
  url           String
  title         String
  year          Int
  typeId        Int
  filmType      FilmType         @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  genreFilm     GenreFilm[]
  favoriteMovie FavouriteMovie[]
  AgeRating     AgeRating        @relation(fields: [ageRatingId], references: [id])
  ageRatingId   Int
}

model GenreFilm {
  id    Int     @id @unique @default(autoincrement())
  name  String  @unique
  Movie Movie[]
}

model FavouriteMovie {
  id      Int   @id @unique @default(autoincrement())
  userId  Int
  user    User  @relation(fields: [userId], references: [id])
  movieId Int
  movie   Movie @relation(fields: [movieId], references: [id])
}

model AgeRating {
  id    Int     @id @unique @default(autoincrement())
  name  String  @unique
  movie Movie[]
}
