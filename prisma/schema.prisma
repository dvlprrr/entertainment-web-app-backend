generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @unique @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique @db.VarChar(255)
  password String
  roleId   Int    @default(1)
  role     Role   @relation(fields: [roleId], references: [id])
}

model Movie {
  id               Int                @id @unique @default(autoincrement())
  image            String
  title            String
  year             Int
  typeid           Int
  filmType         FilmType           @relation(fields: [typeid], references: [id])
  ageRating        String
  MovieToGenreFilm MovieToGenreFilm[]
}

model GenreFilm {
  id               Int                @id @unique @default(autoincrement())
  name             String
  MovieToGenreFilm MovieToGenreFilm[]
}

model FilmType {
  id    Int     @id @unique @default(autoincrement())
  type  String
  movie Movie[]
}

model MovieToGenreFilm {
  movie       Movie     @relation(fields: [movieId], references: [id])
  movieId     Int
  genreFilm   GenreFilm @relation(fields: [genreFilmId], references: [id])
  genreFilmId Int

  @@id([movieId, genreFilmId])
}
