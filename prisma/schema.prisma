generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @unique @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique @db.VarChar(255)
  password String
  roleId   Int    @default(1)
  role     Role   @relation(fields: [roleId], references: [id])
}

model FilmType {
  id    Int     @id @unique @default(autoincrement())
  type  String  @unique
  movie Movie[]
}

model Movie {
  id        Int         @id @unique @default(autoincrement())
  url       String
  title     String
  year      Int
  typeId    Int
  filmType  FilmType    @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ageRating String
  genreFilm GenreFilm[]
}

model GenreFilm {
  id    Int     @id @unique @default(autoincrement())
  name  String
  Movie Movie[]
}
